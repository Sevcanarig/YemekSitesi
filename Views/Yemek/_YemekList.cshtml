@model IEnumerable<YemekTarifiApp.Models.Yemek>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yemek in Model)
        {
            <tr>
                <td>@yemek.Ad</td>
                <td>
                    <a asp-action="Detay" asp-route-id="@yemek.Id">Detay</a> |
                    <a asp-action="Duzenle" asp-route-id="@yemek.Id">Düzenle</a> |
                    <a asp-action="Sil" asp-route-id="@yemek.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
