@model YemekTarifiApp.Models.Yemek

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detay - @Model.Ad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2>@Model.Ad</h2>

        <img src="@(!string.IsNullOrEmpty(Model.ResimUrl) ? Model.ResimUrl : Url.Content("~/Img/placeholder.png"))" class="img-fluid" alt="Yemek Resmi">
        <p><strong>Yapılışı:</strong> @Model.Yapilis</p>
        
        <h6 class="mt-4">Malzemeler:</h6>
        <ul class="list-group">
            @if (Model.YemekMalzemeler != null && Model.YemekMalzemeler.Any())
            {
                foreach (var malzeme in Model.YemekMalzemeler)
                {
                    <li class="list-group-item">
                        @if (malzeme.Malzeme != null)
                        {
                            <span class="badge badge-secondary">@malzeme.Malzeme.Ad</span> @malzeme.Miktar
                        }
                        else
                        {
                            <span class="badge badge-secondary">Malzeme adı yok</span>
                        }
                    </li>
                }
            }
            else
            {
                <li class="list-group-item">Malzeme bulunmuyor.</li>
            }
        </ul>
        
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Yemek" class="btn btn-primary">Geri Dön</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
